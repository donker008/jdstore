<div class="row">
      <div class="col-md-10 col-md-offset-1">
      <h2>个人信息</h2>
      <div class="row">
        <!-- 添加用户名和姓名-->
        <%= simple_form_for @user, :url => usercenter_update_user_info_path, method: :post do |f| %>
          <div class="form-group">
            <%= f.input :nick_name , :label => "昵称"%>
            <%= f.input :name , :label => "姓名"%>
            <%= f.input :sex , :label => "性别"%>
            <%= f.input :birthday , :label => "出生日期"%>
            <%= f.input :phone , :label => "手机号"%>
            <%= f.input :address , :label => "住址"%>
            <%= f.submit "修改个人信息", class: "btn btn-lg btn-danger"%>
          </div>
        <% end %>
      </div>
    </div>
</div>
